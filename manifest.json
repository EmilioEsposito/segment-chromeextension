{
  "name": "Segment Event Tracker",
  "manifest_version": 2,
  "version": "1.2",
  "description": "See when events are being tracket.",
  "permissions": [
  	"<all_urls>",
    "http://*/*",
    "https://*/*",
  	"webRequest",
  	"webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo.png"
  },
  "background": {
	"scripts": [
		"background.js"
	],
	"persistent": true
  }
}